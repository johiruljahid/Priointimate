
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if true; // In production, add auth checks
    }
    match /models/{modelId} {
      allow read, write: if true; // Allow admin to manage models
    }
    match /payments/{payId} {
      allow read, write: if true;
    }
    match /withdrawals/{withId} {
      allow read, write: if true;
    }
  }
}
